= title "Login"

%div#login.singleActionBox

  %h2.pageTitle
    Sign in

  - if notice 
    %p.notice
      = notice
        
  - if alert 
    %p.alert
      = alert

  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  
    %p
      = f.label :email
      = f.text_field :email

    %p
      = f.label :password
      = f.password_field :password

    - if devise_mapping.rememberable?
      %p.group
        = f.check_box :remember_me
        = f.label :remember_me
    
    %p.formActions.group
      = f.submit "Sign in"
      = render :partial => "devise/shared/links"