= title "Login"

.row
  %section.span4.form-description
    %h2.heading Login to Say What!

    - if devise_mapping.registerable? && controller_name != 'registrations'
      %p= link_to "Sign up for a new account", new_registration_path(resource_name), :class => "btn success"

  %section.span11.offset1
    %fieldset
      %legend Say What! Login Form

      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

        .clearfix
          = f.label :email
          .input
            = f.text_field :email, :class => "xlarge"
            %span.help-block What's your email address?

        .clearfix
          = f.label :password
          .input
            = f.password_field :password, :class => "xlarge"
        
        .clearfix
          %label
          .input
            %ul.inputs-list
              %li
                %label
                  = f.check_box :remember_me
                  %span Remember Me?

        .actions
          = f.submit "Sign in", :class => "btn primary"
          = link_to "Forgot your password?", new_password_path(resource_name), :class => "btn default"