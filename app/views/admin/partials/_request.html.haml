%h3 Sponsor Information
    
%p.group
  %b Sponsor Name:
  = @sponsor.name
        
%p.group
  %b Sponsor Email:
  = @sponsor.email   

%h3 Group Information
      
= form_for @group, :url => "/groups/#{@group.id}/approve_group", :method => :put do |f|
  
  = errors_for(@group, "Oops, there were some problems with your group information").html_safe
        
  %p.group
    %b= f.label :name
    = f.text_field :display_name
  
  %p.group
    %b= f.label :city
    = f.text_field :city
  
  %p.group
    %b= f.label :organization
    = f.text_field :organization
      
  %p.group
    %b= f.label :esc_region
    = f.text_field :esc_region
      
  %p.group
    %b= f.label :dshs_region
    = f.text_field :dshs_region
      
  %p.group
    %b= f.label :area_of_state
    = f.text_field :area
  
  %p.group
    %b= f.label :description
    = f.text_area :description
  
  %p.group.formAction
    
    %button.approve.submit{:type => 'submit'} Approve
    |
    = link_to "Deny", "/admin/denied_group_reasons?group_id=#{@group.id.to_s}", :id => "deny", :rel => "facebox"