%div#mainNav.right.group

  %ul.group
    - if current_user && current_user.status == "active"
    
      %li#userTag.group
        = image_tag(current_user.avatar_url(:thumb), :width => 25, :height => 25)
        %strong
          = current_user.name
        
        = link_to "Edit Account", "/settings/profile"
      
      %li.iconOption
        = link_to image_tag("http://placehold.it/25"), "/groups/#{current_user.group.permalink}" if current_user.group
      
      %li.iconOption
        = link_to image_tag("http://placehold.it/25"), "/messages"
        
      %li#logoutAction
        = link_to "Logout", destroy_user_session_path
        
    - else
    
      %li#loginAction
        = link_to "Login", new_user_session_path