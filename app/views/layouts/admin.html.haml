!!!
%html
  %head
    %title Say What! Manager
    = stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/drastic-dark/style", "web-app-theme/override"#, :cache => true
    = javascript_include_tag "/js/head.load.min.js"
    
    %script
      head.js(
      "http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js",
      "/javascripts/rails.js");
    
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Say What! System Manager
        #user-navigation
          %ul.wat-cf
            %li
              %a{:href => "#"}= t("web-app-theme.profile", :default => "Profile")
            %li
              %a{:href => "#"}= t("web-app-theme.settings", :default => "Settings")
            %li
              %a.logout{:href => "/logout"}= t("web-app-theme.logout", :default => "Logout")
        #main-navigation
          %ul.wat-cf
            %li{:class => controller.action_name == 'index' ? 'active' : '' }
              %a{:href => '/admin/dashboard'} Dashboard
            %li{:class => controller.action_name == 'show_requests' ? 'active' : '' }
              %a{:href => '/admin/requests'} Requests
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} Web App.
        #sidebar
          = yield :sidebar
