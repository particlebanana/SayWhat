!!!
%html{:lang => I18n.locale.to_s}
  %head
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    
    %title
      = "#{yield(:title)} | SayWhat"
 
    = stylesheet_link_tag "/css/compiled/application.css"
    
    = javascript_include_tag "/js/modernizr-1.5.min.js"

    = csrf_meta_tag

  %body
  
    %div#top
    
    %div#wrapper
    
      %header
        %h1.left
          SayWhat!
        
        = render :partial => "layouts/session_header"
              
      %div#content.group
        = yield
        
    
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.js"}
    %script{:src => "/js/functions.js"}