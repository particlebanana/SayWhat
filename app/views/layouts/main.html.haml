!!!
%html{:lang => I18n.locale.to_s}
  %head
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    
    %title
      = "SayWhat / #{yield(:title)}"
 
    = stylesheet_link_tag 'application', :media => :screen
    = stylesheet_link_tag 'flick/jquery-ui-1.8.8.custom.css', :media => :screen
    
    = javascript_include_tag "/js/head.load.min.js"
    
    %script
      head.js(
      "http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js",
      "/js/modernizr-1.5.min.js",
      "/js/jquery-ui-1.8.8.custom.min.js",
      "/javascripts/rails.js",
      "/js/functions.js");

    = csrf_meta_tag

  %body
        
    %header#pageHeader
      %div#innerHeader.group
        %h1.left
          SayWhat!
        
        = render :partial => "layouts/session_header"
              
    %div#content.group
      = yield
        
    
    