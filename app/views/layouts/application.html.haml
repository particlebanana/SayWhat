!!!
%html{:lang => I18n.locale.to_s}
  %head
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    
    %title
      = "SayWhat / #{yield(:title)}"
 
    = stylesheet_link_tag 'application', :media => :screen
    
    = javascript_include_tag "/js/modernizr-1.5.min.js"

    = csrf_meta_tag

  %body
  
    %div#top
    
    %div#wrapper
    
      %header
        %h1.left
          SayWhat!
        
        = render :partial => "layouts/session_header"
        
      %div#content
        = yield
