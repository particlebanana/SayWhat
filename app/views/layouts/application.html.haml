!!!
%html{:lang => I18n.locale.to_s}
  %head
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    
    %title
      = "#{yield(:title)} | SayWhat"
 
    = stylesheet_link_tag "/css/compiled/external.css"
    
    = javascript_include_tag "/js/modernizr-1.5.min.js"

    = csrf_meta_tag

  %body
  
    %div#top
    
    %div#wrapper
    
      %header
        %h1.left
          SayWhat!
        
        %p.right
          = link_to "Login", new_user_session_path
        
      %div#content
        = yield
