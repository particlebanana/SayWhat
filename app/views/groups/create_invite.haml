= title "Invite Member"

%div#projectHeader
  %div.centeredWrap.group
    %header.group
      %hgroup.left
        %h1
          Invite a friend to join
          
%div#membershipRequestForm.centeredWrap.group   
    
  = form_for @user, :url => "/groups/#{@group.permalink}/send_invite" do |u|
      
    = errors_for(@user, "Opps, there were some problems with your invite").html_safe
          
    %p.group
      = u.label :email, :class => "required"
      = u.text_field :email
    
    %button.submit{:type => 'submit'}
      Send Invite
      
    