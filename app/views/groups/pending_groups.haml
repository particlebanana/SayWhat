= title "Pending Groups"

%div#projectHeader
  %div.centeredWrap.group
    %header.group
      %hgroup.left
        %h1
          Pending Groups        

%div.centeredWrap
    
  - if @groups.size > 0
    %ul
      - @groups.each do |group|
        %li
          = link_to group.display_name, "/groups/#{group.id}/pending_group"
          
  - else
    %h3
      No Pending Groups