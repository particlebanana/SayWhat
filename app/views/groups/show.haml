= title @group.display_name

%div#groupTop.group
  %h2.left
    = @group.display_name
  
  - if current_user && current_user.role == "adult sponsor"
    = link_to "Edit Group", edit_group_path(@group)
    
%div#groupSidebar.left
  
  %img{:id => "groupLogo", :src => "http://placehold.it/349x200/8fe86b/333333"}
  
  = render :partial => "group_action_button"
  
  %ul#groupVitals
    %li
      %strong
        Established: 
      = @group.created_at.to_s(:mdy)
      
    %li
      %strong
        Members: 
      = @group.users.count
    
    %li
      %strong
        City: 
      = @group.city
        
    %li
      %strong
        Organization: 
      = @group.organization
      
    %li
      %strong
        Region: 
      = @group.area.capitalize
  
  = render :partial => "member_list"
  

%div#groupContent.right
  
  %div#groupAbout
    %p
      = @group.description
  