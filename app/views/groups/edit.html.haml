= title "Edit Group"

.row
  %section.span4.form-description
    %h2.heading Edit Group

    %p Update your group's profile to keep it current.

  %section.span11.offset1
    %fieldset
      %legend Edit Group

      = form_for @group, :html => { :multipart => true} do |f|

        = errors_for(@group, "error", "<strong>Uh-Oh! There was an error!</strong> try fixing the fields below and try again.").html_safe

        .clearfix
          %label{ :for => 'group_profile_photo'} Picture
          .input.cf
            - if @group.profile_photo
              %span.media
                = image_tag(@group.profile_photo_url(:medium_square), width: 70, height: 70)
            = f.file_field :profile_photo, :class => 'input_file'

        = render :partial => "form", :locals => { f: f }

        .actions
          %input{:type => "submit", :class => "btn primary", :value => "Update"}
          = link_to('Cancel', group_path(@group.permalink), :class => "btn")