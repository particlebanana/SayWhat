      %a{ href: "#" }= image_tag(@group.profile_photo_url(:profile))

    %ul#group_pages
      %li
        %a{ href: group_projects_path(@group) }
          = image_tag '181-hammer.png', width: 10
          %span Projects

    %p= @group.description