= title "Group Approval"

%div#projectHeader
  %div.centeredWrap.group
    %header.group
      %hgroup.left
        %h1
          Group Approval  
      
%div#groupRequestForm.centeredWrap.group 
  
  %fieldset
    %legend
      Sponsor Information
        
    %p.group
      Sponsor Name:
      = @user.name
          
    %p.group
      Sponsor Email:
      = @user.email   
          
  = form_for @group, :url => "/groups/#{@group.id}/approve_group", :method => :put do |f|
  
    = errors_for(@group, "Opps, there were some problems with your group information").html_safe
    
    %fieldset
      %legend
        Group Information
        
      %p.group
        = f.label :name
        = f.text_field :display_name
    
      %p.group
        = f.label :city
        = f.text_field :city
    
      %p.group
        = f.label :organization
        = f.text_field :organization
        
      %p.group
        = f.label :esc_region
        = f.text_field :esc_region
        
      %p.group
        = f.label :dshs_region
        = f.text_field :dshs_region
        
      %p.group
        = f.label :area_of_state
        = f.text_field :area
    
      %p.group
        = f.label :description
        = f.text_area :description
    
    %button.submit{:type => 'submit'}
      Approve Group
      
      
      