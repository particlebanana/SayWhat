%div#groupRequestForm
  
  %fieldset
    %legend
      Sponsor Information
        
    %p.group
      Sponsor Name:
      = @user.first_name + ' ' + @user.last_name
          
    %p.group
      Sponsor Email:
      = @user.email   
          
  = form_for @group, :url => approve_group_group_path(@group), :method => :put do |f|
  
    = errors_for(@group, "Opps, there were some problems with your group information").html_safe
    
    %fieldset
      %legend
        Group Information
        
      %p.group
        = f.label :name
        = f.text_field :display_name
    
      %p.group
        = f.label :city
        = f.text_field :city
    
      %p.group
        = f.label :organization
        = f.text_field :organization
    
      %p.group
        = f.label :description
        = f.text_area :description
    
    %button.submit{:type => 'submit'}
      Approve Group
      
      
      