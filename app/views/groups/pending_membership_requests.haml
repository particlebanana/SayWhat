= title "Pending Members"

%div#projectHeader
  %div.centeredWrap.group
    %header.group
      %hgroup.left
        %h1
          Pending Membership Requests
          
%div.centeredWrap.group  
    
  - if @group.users.pending.count > 0
    %ul#pendingMembers
      - @group.users.pending.each do |user|
        %li
          = user.name
          |
          = link_to "approve", approve_pending_membership_user_path(user)
          
  - else
    %h3
      No Pending Members