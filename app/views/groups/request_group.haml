= title "Create A Group"

%div#groupRequestForm
  
  %h2.pageTitle
    Request To Create A Group
    
  = form_for @group do |f|
  
    = errors_for(@group, "Opps, there were some problems with your group information").html_safe
    = errors_for(@user, "Opps, there were some problems with your sponsor information").html_safe
                
    %fieldset
      %legend
        Sponsor Information
       
      = f.fields_for :user do |u|
          
        %p.group            
          = u.label :first_name, :class => "required"
          = u.text_field :first_name
    
        %p.group
          = u.label :last_name, :class => "required"
          = u.text_field :last_name
          
        %p.group
          = u.label :email, :class => "required"
          = u.text_field :email
          
    %fieldset
      %legend
        Group Information
        
      %p.group
        = f.label :name, :class => "required"
        = f.text_field :display_name
    
      %p.group
        = f.label :city, :class => "required"
        = f.text_field :city
    
      %p.group
        = f.label :organization, :class => "required"
        = f.text_field :organization
    
      %p.group
        = f.label :description
        = f.text_area :description
    
    %button.submit{:type => 'submit'}
      Submit Request
      
    