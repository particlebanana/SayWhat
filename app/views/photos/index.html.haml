= title "#{@project.display_name} Photos"
= description @project.description

.row#group_profile
  %section.span16
    = project_page_header(@project).html_safe

    #photo_gallery

      %ul.upload_select.cf
        %li
          %a.attachment_option#photo{ href: "#" }
            = image_tag "41-picture-frame.png", width: 18
            %span Upload Photo

      #uploader.hidden
        :javascript
          $(function(){
            $("#uploader").pluploadQueue({
              runtimes: 'gears,flash,silverlight,browserplus,html5',
              url: '#{group_project_photos_path(@group.permalink, @project)}',
              multipart: true,
              multipart_params: {
                '#{request_forgery_protection_token}': '#{form_authenticity_token}',
                '#{request.session_options[:key]}': '#{request.session_options[:id]}'
              }
            });

            var uploader = $("#uploader").pluploadQueue()

            uploader.bind('FileUploaded', function(up, file, response){
              $('ul.photos').prepend(
                $(response.response).hide().fadeIn('slow')
              );
            });

            uploader.bind('UploadComplete', function(up, files){
              up.destroy();
              $("#uploader").addClass('hidden');
            });
          });

      %ul.photos.media.cf
        - @photos.each do |item|
          %li
            %a{ href: "#" }= image_tag(item.photo_url(:index))