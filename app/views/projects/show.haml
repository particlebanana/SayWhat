= title @project.display_name

%div#groupTop.group
  %h2.left
    = @project.display_name

  - if current_user && (current_user.role == "adult sponsor" || current_user.role == "youth sponsor")
    = render :partial => "sponsor_actions"
    
%ul
  %li
    %strong
      Group:
    = @group.display_name
    
  %li
    %strong
      Location:
    = @project.location
    
  %li
    %strong
      Date:
    = @project.start_date
    thru
    = @project.end_date

%p
  = @project.description