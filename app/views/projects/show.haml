= title @project.display_name
  
%section#groupContent.group.leftCol
  
  %article
    %header
      %hgroup.group
        %h1.left
          = @project.display_name
      
        - if current_user && (current_user.role == "adult sponsor" || current_user.role == "youth sponsor")
          = link_to "edit", "/groups/#{@group.permalink}/projects/#{@project.name}/edit", :class => "right" if current_user.group == @group
    
  %article   
    %header
      %h3
        Goal of the Project:
    
    %p
      = @project.goal
    
  %article   
    %header
      %h3
        Description of the Project:
    
    %p
      = @project.description
    
  %article   
    %header
      %h3
        Who is involved with the Project:

    %p
      = @project.involves
    
  
  %div#comments
    %h2.sectionTitle
      Comments

    - if notice
      %p.notice
        = notice

    - if @comments
      %ul#comments
        - @comments.each do |comment|
          %li
            = image_tag(comment.user.avatar_url(:thumb))
            = comment.user.name
            %p
              = comment.comment
              - if comment.user == current_user
                = link_to "edit", {:controller => :comments, :action => :edit, :permalink => @group.permalink, :name => @project.name, :comment_id => comment.id.to_s}
              - if current_user.sponsor? && (current_user.group == @group)
                = link_to "delete", {:controller => :comments, :action => :destroy, :permalink => @group.permalink, :name => @project.name, :comment_id => comment.id.to_s}, :confirm => "Are you sure?", :method => :delete


    = form_for [@group, @project, @comment], :url => "/groups/#{@group.permalink}/projects/#{@project.name}/comments" do |f|

      - if alert
        %p.alert
          = alert

      = errors_for(@comment, "Opps, there were some problems adding your comment").html_safe

      %p.group
        = f.label :comment
        = f.text_area :comment

      %button.submit{:type => 'submit'}
        Leave Comment


%div#groupSidebar.rightCol

  = image_tag(@project.profile_photo_url(:profile), :id => "groupLogo")
  
  - if (can? :create, @project.report = Report.new) && (@project.end_date < Date.today)
    = link_to "Report on this project", "/groups/#{@group.permalink}/projects/#{@project.name}/report/new", :class => "groupActionButton" unless @project.report.valid?

  %ul#groupVitals
    %li
      %strong
        Location:
      = @project.location
      
    %li
      %strong
        Date:
      = @project.start_date
      thru
      = @project.end_date
      
    %li
      %strong
        Focus of the Project:
      = @project.focus

    %li
      %strong
        Target Audience for the Project:
      = @project.audience