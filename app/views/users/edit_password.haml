= title "Password"

- if notice 
  %p.notice
    = notice
        
- if alert 
  %p.alert
    = alert
    
= render :partial => "settings_nav", :locals => {:active => "password"}
      
%h2
  Change Your Password
  
= form_for @user, :url => update_password_user_url(@user) do |f|
  
  = errors_for(@user, "Opps, there were some problems updating your password").html_safe
    
  %p.group
    = f.label :new_password
    = f.password_field :password

  %p.group
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    
  %button.submit{:type => 'submit'}
    Update