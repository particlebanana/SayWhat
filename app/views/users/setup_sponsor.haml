= title "Setup"

%div#projectHeader
  %div.centeredWrap.group
    %header.group
      %hgroup.left
        %h1
          New Group Setup
          
%div.centeredWrap.group
  %h2
    Setup Your Sponsor Account:
      
  = form_for @user, :url => create_sponsor_user_url(current_user), :method => :put do |f|
      
    = errors_for(@user, "Oops, there were some errors creating your sponsor account").html_safe
          
    %p.group
      = f.label :password
      = f.password_field :password
        
    %p.group
      = f.label :password_confirmation
      = f.password_field :password_confirmation
        
    %button.submit{:type => 'submit'}
      Continue