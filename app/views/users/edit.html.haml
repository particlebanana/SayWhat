= title "Edit Profile"

.row
  %section.span4.form-description
    %h2.heading Edit Profile

    %p Update your user profile to keep it current.

  %section.span11.offset1
    %fieldset
      %legend Edit Profile

      = form_for(@user, :html => { :multipart => true}) do |f|

        = errors_for(@user, "error", "<strong>Uh-Oh! There was an error!</strong> try fixing the fields below and try again.").html_safe

        .clearfix
          %label{ :for => 'user_profile_photo'} Picture
          .input.cf
            - if @user.profile_photo_url
              %span.media
                = image_tag(@user.profile_photo_url(:medium_square), width: 70, height: 70)
            = f.file_field :profile_photo, :class => 'input_file'

        = render :partial => "form", :locals => { f: f }

        .actions
          %input{:type => "submit", :class => "btn primary", :value => "Update"}
          = link_to('Cancel', '/', :class => "btn")