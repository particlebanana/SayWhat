body.conference {
  background: #222 url(<%= asset_path "conf/gun_metal.png" %>) repeat;

  header {
    margin-bottom: 0;
    border-bottom: 1px solid #222;
  }

  img.banner {
    border-left: 4px solid #69bff9;
    border-right: 4px solid #69bff9;
    border-bottom: 4px solid #69bff9;
    -webkit-border-bottom-right-radius: 4px;
    -webkit-border-bottom-left-radius: 4px;
    -moz-border-radius-bottomright: 4px;
    -moz-border-radius-bottomleft: 4px;
    border-bottom-right-radius: 4px;
    border-bottom-left-radius: 4px;
  }

  #conf {

    h1 {
      color: #fff;
      margin: 15px 0 25px 0;
      font-family: "hooligan";
      font-weight: 400;
      font-size: 45px;
    }

    p {
      font-size: 16px;
      line-height: 1.6em;
    }

    .section {
      background: #fff;
      margin: 4em 0;
      padding: 2em;
      border: 4px solid #69bff9;
      -webkit-border-radius: 4px;
      -moz-border-radius: 4px;
      -o-border-radius: 4px;
      border-radius: 4px;

      ul.buttons {
        width: 70%;
        margin: 4em auto 0 auto;

        li {
          list-style: none;
          float: left;
          margin: 0 3em;

          a {
            display: block;
            width: 223px;
            height: 121px;
            text-indent: -9999em;
          }
        }

        li#scholarships a {
          background-image: url(<%= asset_path "conf/scholarships.jpg" %>);
        }

        li#registration a {
          background-image: url(<%= asset_path "conf/registration.jpg" %>);
        }
      }
    }

    .section.top {
      margin-top: 4em;
    }

    #youth {
      padding-top: 223px;
      background: #fff url(<%= asset_path "conf/youth.jpg" %>) no-repeat;
    }

    #information {
      padding-top: 265px;
      background: #fff url(<%= asset_path "conf/information.jpg" %>) no-repeat;
    }

    #speakers {
      padding-top: 268px;
      background: #fff url(<%= asset_path "conf/speakers.jpg" %>) no-repeat;
    }

    #sessions {
      padding-top: 233px;
      background: #fff url(<%= asset_path "conf/sessions.jpg" %>) no-repeat;
    }

    #agenda {
      padding-top: 244px;
      background: #fff url(<%= asset_path "conf/agenda.jpg" %>) no-repeat;
    }

    #venue {
      padding-top: 258px;
      background: #fff url(<%= asset_path "conf/venue.jpg" %>) no-repeat;
    }

  }

}