gem 'jquery-rails'
gem 'capistrano'
gem 'json'
gem 'haml'
gem 'nokogiri'
gem 'mini_magick'
gem 'sanitize'
gem 'escape_utils'
gem 'carrierwave', "~> 0.5.7"

# Sinatra Plugins
gem 'sinatra'
gem 'pony'

# Rake Tasks to transition data
gem 'mongo', '~> 1.3.0'

